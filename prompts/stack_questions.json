[
  {
    "type": "list",
    "name": "project_type",
    "message": "¿Qué tipo de proyecto vas a iniciar?",
    "choices": ["Frontend", "Backend", "Fullstack"]
  },
  {
    "type": "list",
    "name": "frontend_framework",
    "message": "¿Qué framework frontend prefieres?",
    "choices": ["React", "Angular", "Vue.js"],
    "when": {
      "or": [
        { "project_type": "Frontend" },
        { "project_type": "Fullstack" }
      ]
    }
  },
  {
    "type": "list",
    "name": "backend_framework",
    "message": "¿Qué framework backend prefieres?",
    "choices": ["Node.js", "Django", "Flask", "Spring Boot"],
    "when": {
      "or": [
        { "project_type": "Backend" },
        { "project_type": "Fullstack" }
      ]
    }
  },
  {
    "type": "list",
    "name": "database",
    "message": "¿Qué base de datos usarás?",
    "choices": ["PostgreSQL", "MySQL", "MongoDB", "SQLite"],
    "when": {
      "or": [
        { "project_type": "Backend" },
        { "project_type": "Fullstack" }
      ]
    }
  },
  {
    "type": "confirm",
    "name": "confirm_generation",
    "message": "¿Deseas generar la estructura del proyecto ahora?",
    "default": true
  },
  {
    "type": "input",
    "name": "project_name",
    "message": "¿Cuál es el nombre de tu nuevo proyecto?",
    "default": "my_awesome_project",
    "when": { "confirm_generation": true }
  }
]